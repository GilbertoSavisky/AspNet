@model  IEnumerable<SalesWebMvc.Models.Vendedor>
@{
    ViewData["Title"] = "Vendedores";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create"class="btn btn-secondary">Criar Novo</a>
</p>

<table class=" table table-striped table-hover">
    <thead>
        <tr class="alert-success">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAniversario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioBase)
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAniversario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalarioBase)
                </td>
                <td>
                    <a asp-action="Editar" asp-rout-id="@item.Id" class="btn btn-secondary">Editar</a> 
                    <a asp-action="Detalhes" asp-rout-id="@item.Id" class="btn btn-secondary">Detalhes</a>
                    <a asp-action="Excluir" asp-rout-id="@item.Id" class="btn btn-secondary">Excluir</a>

                </td>
            </tr>
        }
    </tbody>
</table>